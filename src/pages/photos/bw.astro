---
import { getCollection } from "astro:content";
import BaseLayout from "../../layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";
const bwPhotos = await getCollection("bw");
---

<BaseLayout title="Photos">
  <ul class="grid sm:grid-cols-2 gap-2 p-0">
    {
      bwPhotos.map((p) => (
        <li class="list-none p-0 m-0">
          <a href={`/photos/bw/${p.data.slug}`}>
            <Image
              class="object-cover h-full w-full border-8 border-black m-0"
              src={p.data.image}
              alt={p.data.title}
              quality={50}
              loading="lazy"
            />
          </a>
        </li>
      ))
    }
  </ul>
</BaseLayout>
