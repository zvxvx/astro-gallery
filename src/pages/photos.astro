---
import { getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Category from "../components/Category.astro";
const bwCategoryPhoto = await getEntry("bw", "dock");
const colorCategoryPhoto = await getEntry("color", "shipwrecked");
---

<BaseLayout title="Photos">
  <ul class="grid sm:grid-cols-2 gap-2">
    <Category
      categoryPhoto={bwCategoryPhoto}
      categoryName="Black & White"
      categoryPath={bwCategoryPhoto.collection}
    />
    <Category
      categoryPhoto={colorCategoryPhoto}
      categoryName="Color"
      categoryPath={colorCategoryPhoto.collection}
    />
  </ul>
</BaseLayout>
