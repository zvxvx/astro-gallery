---
import { getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Category from "../components/Category.astro";
const monoCategoryPhoto = await getEntry("photos", "dock");
const colorCategoryPhoto = await getEntry("photos", "shipwrecked");
---

<BaseLayout title="Photos">
  <ul class="grid sm:grid-cols-2 gap-2 p-0">
    <Category
      entry={monoCategoryPhoto}
      path={monoCategoryPhoto.data.category}
    />
    <Category
      entry={colorCategoryPhoto}
      path={colorCategoryPhoto.data.category}
    />
  </ul>
</BaseLayout>
