---
import { getEntry } from "astro:content";
import BaseLayout from "../layouts/BaseLayout.astro";
import Image from "astro/components/Image.astro";
import { getCollection } from "astro:content";
const featuredPhoto = await getEntry("color", "living_spaces");
const blogEntries = await getCollection("blog");
const latestBlogEntries = blogEntries
  .sort((a: any, b: any) => b.data.date - a.data.date)
  .slice(0, 4);
---

<BaseLayout title="Home">
  <h2 class="pt-2">Featured Photo</h2>
  <a href={`/photos/${featuredPhoto.collection}/${featuredPhoto.data.slug}`}>
    <Image
      class="mt-0 object-cover h-80 w-full border-8 dark:border-white border-black"
      src={featuredPhoto.data.image}
      alt={featuredPhoto.data.title}
      quality={50}
      format="avif"
    />
  </a>
  <h2>Latest posts</h2>
  <ul class="p-0 grid sm:grid-cols-2 gap-2">
    {
      latestBlogEntries.map((post) => (
        <a
          class="border border-black dark:border-white dark:bg-slate-600 bg-slate-300 p-2 hover:bg-slate-400 dark:hover:bg-slate-800"
          href={`/blog/${post.slug}`}
        >
          <h2>{post.data.title}</h2>
          <h3>{post.data.date.toISOString().slice(0, 10)}</h3>
          <p>{post.data.description}</p>
        </a>
      ))
    }
  </ul>
</BaseLayout>
