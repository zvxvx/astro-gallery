---
import Image from "astro/components/Image.astro";
const { categoryPhoto, categoryName } = Astro.props;
---

<ul class="grid sm:grid-cols-2 gap-2 p-0">
  <li class="border-4 border-black bg-black m-0 p-0 list-none">
    <a href="/photos/bw">
      <Image
        class="m-0"
        src={categoryPhoto.data.image}
        alt={categoryPhoto.data.title}
      />
      <p class="m-0 text-white text-center">{categoryName}</p>
    </a>
  </li>
</ul>
